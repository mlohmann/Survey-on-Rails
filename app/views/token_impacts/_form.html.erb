<%= form_for(@token_impact) do |f| %>
	<% if @token_impact.errors.any? %>
	<div class="row">
	   <div class="span12"> 
		 <div id="error_explanation">
	      <h2><%= pluralize(@token_impact.errors.count, "error") %> prohibited this question from being saved:</h2>

	      <ul>
	      <% @token_impact.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div> 
	  </div>
	</div>
    <% end %> 
   
    <div class="row">  
	  <div class="span6">
	    <h4>Question: <%= @token_impact.question.text %></h4>
	    <h4>Token: <%= @token_impact.token_title  %></h4>
	  </div>
	</div>
	<div class="row">  
	  <div class="span12">
		<hr>
	  </div>
	</div>	
    <div class="row">  
	  <div class="span3">
	    <%= f.label :affirm_strength %><br />
	  </div>
	  <div class="span3">
	    <%= f.number_field :affirm_strength %>
	  </div>
	</div>
	<div class="row">  
	  <div class="span3">
	    <%= f.label :oppose_strength %><br />
	  </div>
	  <div class="span3">
	    <%= f.number_field :oppose_strength %>
	  </div>
	</div>
	<div class="row">  
	   <div class="span3"> 
		  <div class="actions">
		    <%= f.submit(:class => 'btn btn-small btn-success') %>
		  </div> 
	   </div>  
	</div>
<% end %>
